<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    Set Margin Here -->
    <item
        android:bottom="10dp"
        android:left="8dp"
        android:right="8dp"
        android:top="10dp">

        <!-- Insert your shape here: -->
        <shape android:shape="rectangle">
            <solid android:color="#00A651" />
            <!-- Padding for inner text-->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <corners android:radius="8dp" />

        </shape>
    </item>
</layer-list>